{
  "version": "1.0.0-*",
  "buildOptions": {
    "emitEntryPoint": true,
    "compilerName": "fsc",
    "compile": {
      "includeFiles": [
        "Collections/PriorityQueue.fs",
        "Collections/Queue.fs",
        "Utilities/TypeUtility.fs",
        "Utilities/ConversionUtility.fs",
        "Net/Protocol/TcpPacket.fs",
        "Net/Protocol/TcpByteComposer.fs",
        "Net/Protocol/TcpByteParser.fs",
        "Net/Protocol/UdpPacket.fs",
        "Net/Sockets/Socket.fs",
        "Net/PortChecker.fs",
        "Net/TcpConnection.fs",
        "Net/Server.fs",
        "Program.fs"
      ]
    }
  },
  "dependencies": {
    "Microsoft.FSharp.Core.netcore": "1.0.0-alpha-160509",
    "System.Net.Sockets": "4.1.0",
    "System.Threading": "4.0.11",
    "System.Threading.Tasks": "4.0.11"
  },
  "tools": {
    "dotnet-compile-fsc": {
      "version": "1.0.0-preview2-*",
      "imports": [
        "dnxcore50",
        "portable-net45+win81",
        "netstandard1.3"
      ]
    }
  },
  "frameworks": {
    "netcoreapp1.0": {
      "dependencies": {
        "Microsoft.NETCore.App": {
          "type": "platform",
          "version": "1.0.0"
        },
        "System.Net.Sockets": "4.1.0",
        "System.Threading": "4.0.11",
        "System.Threading.Tasks": "4.0.11"
      },
      "imports": [
        "portable-net45+win8",
        "dnxcore50"
      ]
    }
  }
}
